{
    "name": "melvinversluijs/laravel-webshop",
    "type": "project",
    "description": "A webshop built using the Laravel framework.",
    "keywords": ["framework", "laravel", "webshop"],
    "license": "MIT",
    "require": {
        "php": "~8.0.0",
        "doctrine/dbal": "^3.1.1",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.12",
        "laravel/jetstream": "^2.3.4",
        "laravel/sanctum": "^2.6",
        "laravel/tinker": "^2.5",
        "livewire/livewire": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5.5",
        "barryvdh/laravel-ide-helper": "^2.10.0",
        "facade/ignition": "^2.9.0",
        "fakerphp/faker": "^1.14.1",
        "isaac/php-code-sniffer-standard": "^23.0.0",
        "mockery/mockery": "^1.4.3",
        "nunomaduro/collision": "^5.4.0",
        "nunomaduro/larastan": "^0.7.5",
        "pestphp/pest": "^1.20.0",
        "pestphp/pest-plugin-laravel": "^1.1.0",
        "pestphp/pest-plugin-parallel": "^0.3.1",
        "phpstan/phpstan": "^0.12.87",
        "phpstan/phpstan-strict-rules": "^0.12.9",
        "spatie/laravel-ray": "^1.17.4",
        "squizlabs/php_codesniffer": "^3.6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse --memory-limit=2G",
        "pest": "@php artisan test --parallel",
        "test": [
            "@phpcs",
            "@phpstan",
            "@pest"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
